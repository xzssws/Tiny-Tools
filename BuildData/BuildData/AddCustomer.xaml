<Window x:Class="BuildData.AddCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="添加用户自定义数据" Height="369" Width="340" ResizeMode="NoResize">
    <Grid Background="#FF333333">
        <Grid.RowDefinitions>
            <RowDefinition Height="27*" />
            <RowDefinition Height="265*" />
            <RowDefinition Height="38*" />
        </Grid.RowDefinitions>
        <TextBox  Name="TextContent" Grid.Row="1" Margin="5" Background="#FF565656" Foreground="White" TextWrapping="WrapWithOverflow" />
        <TextBlock HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center" Text="数据集合 用;分割"  Foreground="#FFE0E0E0" />
        <Button Content="添加" Height="23" HorizontalAlignment="Left" Margin="70,3,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" BorderBrush="#FF646464" Background="#FF545454" Foreground="#FFF3F3F3" Grid.Row="2" />
   
        <Button Background="#FF545454" BorderBrush="#FF646464" Content="取消" Foreground="#FFF3F3F3" Height="23" HorizontalAlignment="Left" Margin="173,3,0,0" Name="button3" VerticalAlignment="Top" Width="75"  Click="button2_Click" Grid.Row="2" />
    </Grid>
</Window>
